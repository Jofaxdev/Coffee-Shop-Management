                    selectedIngredientIds.forEach(id => $form.append($("<input>", { type: "hidden", name: "ingredientIds", value: id })));
                }
                $form.appendTo('body').submit().remove();
                setTimeout(() => hideLoading('body'), 3000);
            });

            // Nút "Xem trước" trong modal tùy chọn
            $('#btnPreviewInventoryReport').on('click', function () {
                if (!$('#inventoryReportForm').valid()) {
                    showErrorAlert("Thiếu thông tin", "Vui lòng chọn đầy đủ Từ ngày và Đến ngày.");
                    return;
                }

                const fromDateVal = $('#reportFromDate').val(), toDateVal = $('#reportToDate').val();
                const fromDateParts = fromDateVal.split('/'), toDateParts = toDateVal.split('/');
                const fromDateISO = `${fromDateParts[2]}-${fromDateParts[1]}-${fromDateParts[0]}T00:00:00`;
                const toDateISO = `${toDateParts[2]}-${toDateParts[1]}-${toDateParts[0]}T23:59:59`;
                const selectedIngredientIds = $('#reportIngredientIds').val();

                $('#previewReportModalBody').html('<div class="excel-preview-container"><div class="d-flex justify-content-center align-items-center h-100"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div></div></div>');
                previewModal.show();
                inventoryReportModal.hide();

                $.ajax({
                    url: '@Url.Action("PreviewInventoryReport", "Inventory")',
                    type: 'POST',
                    data: { fromDate: fromDateISO, toDate: toDateISO, ingredientIds: selectedIngredientIds },
                    success: function (response) {
                        $('#previewReportModalBody').html(`<div class="excel-preview-container">${response}</div>`);
                    },
                    error: function (xhr) {
                        handleAjaxError(xhr, "tạo bản xem trước");
                        $('#previewReportModalBody').html('<div class="alert alert-danger m-3">Không thể tạo bản xem trước.</div>');
                    }
                });
            });

            // Nút "Tải xuống" từ trong modal xem trước
            $('#btnDownloadFromPreview').on('click', () => $('#btnExportInventoryToExcel').trigger('click'));

            // Sự kiện click "Xem chi tiết" trong modal xem trước (sử dụng event delegation)
            $('#previewReportModalBody').on('click', '.btn-view-detail', function () {
                const ingredientId = $(this).data('id');
                const fromDateVal = $('#reportFromDate').val(), toDateVal = $('#reportToDate').val();
                const fromDateParts = fromDateVal.split('/'), toDateParts = toDateVal.split('/');
                const fromDateISO = `${fromDateParts[2]}-${fromDateParts[1]}-${fromDateParts[0]}T00:00:00`;
                const toDateISO = `${toDateParts[2]}-${toDateParts[1]}-${toDateParts[0]}T23:59:59`;

                const $summaryView = $('#preview-summary-view');
                const $detailView = $('#preview-detail-view');

                // [MỚI] Điều khiển các nút ở footer
                $('#btnDownloadFromPreview').hide();
                $('#btn-back-to-summary').show();

                $detailView.html('<div class="d-flex justify-content-center p-5"><div class="spinner-border text-primary" role="status"></div></div>').show();
                $summaryView.hide();

                $.ajax({
                    url: '@Url.Action("PreviewIngredientDetail", "Inventory")',
                    type: 'POST',
                    data: { ingredientId: ingredientId, fromDate: fromDateISO, toDate: toDateISO },
                    success: function (response) {
                        $detailView.html(response);
                    },
                    error: function (xhr) {
                        handleAjaxError(xhr, "tải chi tiết");
                        $detailView.html('<div class="alert alert-danger m-3">Không thể tải chi tiết.</div>');
                    }
                });
            });

            // Sự kiện click "Quay lại" từ footer của modal
            // Lưu ý: đổi selector từ #previewReportModalBody sang #previewReportModal để bắt sự kiện ở footer
            $('#previewReportModal').on('click', '#btn-back-to-summary', function () {
                // [MỚI] Điều khiển các nút ở footer
                $('#btnDownloadFromPreview').show();
                $('#btn-back-to-summary').hide();

                $('#preview-detail-view').hide().empty();
                $('#preview-summary-view').show();
            });

            // Sự kiện reset modal khi bị đóng
            var previewModalEl = document.getElementById('previewReportModal');
            previewModalEl.addEventListener('hidden.bs.modal', function (event) {
                // Xóa nội dung
                $('#previewReportModalBody').empty();

                // [MỚI] Reset lại trạng thái các nút ở footer về mặc định
                $('#btnDownloadFromPreview').show();
                $('#btn-back-to-summary').hide();
            });

            // Cập nhật và hiển thị thời gian thực cho trường Ngày giao dịch
            function updateTransactionDateTime() {
                const now = new Date();
                const formattedDateTime =
                    ('0' + now.getDate()).slice(-2) + '/' +
                    ('0' + (now.getMonth() + 1)).slice(-2) + '/' +
                    now.getFullYear() + ' ' +
                    ('0' + now.getHours()).slice(-2) + ':' +
                    ('0' + now.getMinutes()).slice(-2) + ':' +
                    ('0' + now.getSeconds()).slice(-2);
                $('#transactionDate').val(formattedDateTime);
            }

            // Gọi lần đầu khi tải trang và sau đó cập nhật mỗi giây
            updateTransactionDateTime();
            setInterval(updateTransactionDateTime, 1000);

            // Xử lý sự kiện reset form
            $('#createTransactionForm').on('reset', function () {
                setTimeout(() => {
                    $('#createTransactionForm').validate().resetForm();
                    $('.is-invalid').removeClass('is-invalid');
                    $('.is-valid').removeClass('is-valid');
                    $('#transactionIngredientId').val(null).trigger('change');
                    $('#transactionSupplierId').val(null).trigger('change');
                    $('#transactionType').val("").trigger('change');
                    $('#ingredientInfo').text('');
                }, 0);
            });

            $('button[data-bs-toggle="tab"]').on('shown.bs.tab', function (e) {
                let targetPaneId = $(e.target).attr('aria-controls');
                if ($('.select2-custom.select2-hidden-accessible').data('select2')) {
                    $('.select2-custom.select2-hidden-accessible').select2('close');
                }
                if ($('.select2-report.select2-hidden-accessible').data('select2')) {
                    $('.select2-report.select2-hidden-accessible').select2('close');
                }
                if ($('.select2-custom-filter.select2-hidden-accessible').data('select2')) {
                    $('.select2-custom-filter.select2-hidden-accessible').select2('close');
                }
            });


            // =================== DASHBOARD CHARTING LOGIC ===================
            // Hàm định dạng số cho đẹp hơn
            const formatCurrency = (value) => new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(value);
            const formatNumber = (value) => new Intl.NumberFormat('vi-VN').format(value);

            // Hàm để load tất cả dữ liệu cho dashboard
            function loadDashboardData() {
                const kpiUrl = '@Url.Action("GetDashboardKpis", "Inventory")';
                const pieChartUrl = '@Url.Action("GetInventoryValueDistribution", "Inventory")';
                const barChartUrl = '@Url.Action("GetTopConsumedIngredients", "Inventory")';
                const lineChartUrl = '@Url.Action("GetWasteTrend", "Inventory")';
                const lowStockUrl = '@Url.Action("GetLowStockIngredients", "Inventory")'; // API mới
                const topWastedUrl = '@Url.Action("GetTopWastedIngredients", "Inventory")'; // API mới


                // Gọi API cho KPI
                $.get(kpiUrl, function (data) {
                    $('#kpiTotalValue').text(formatCurrency(data.totalInventoryValue));
                    $('#kpiLowStockItems').text(formatNumber(data.lowStockItemsCount) + ' loại');
                });

                // Gọi API và vẽ biểu đồ tròn
                $.get(pieChartUrl, function (data) {
                    const ctx = document.getElementById('inventoryValuePieChart').getContext('2d');
                    new Chart(ctx, {
                        type: 'doughnut',
                        data: {
                            labels: data.map(d => d.label),
                            datasets: [{
                                data: data.map(d => d.value),
                                backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b', '#858796', '#5a5c69'],
                            }],
                        },
                        options: {
                            maintainAspectRatio: false,
                            plugins: {
                                tooltip: {
                                    callbacks: {
                                        label: function (context) {
                                            let label = context.label || '';
                                            if (label) {
                                                label += ': ';
                                            }
                                            if (context.parsed !== null) {
                                                label += formatCurrency(context.parsed);
                                            }
                                            return label;
                                        }
                                    }
                                }
                            }
                        },
                    });
                });

                // Gọi API và vẽ biểu đồ cột
                $.get(barChartUrl, function (data) {
                    const ctx = document.getElementById('consumedIngredientsBarChart').getContext('2d');
                    new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: data.map(d => d.label),
                            datasets: [{
                                label: 'Số lượng tiêu thụ',
                                data: data.map(d => d.value),
                                backgroundColor: '#4e73df',
                            }],
                        },
                        options: {
                            maintainAspectRatio: false,
                            scales: {
                                y: { beginAtZero: true }
                            },
                            plugins: {
                                legend: { display: false }
                            }
                        },
                    });
                });

                // Gọi API và vẽ biểu đồ đường
                $.get(lineChartUrl, function (data) {
                    const ctx = document.getElementById('wasteTrendLineChart').getContext('2d');
                    new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: data.map(d => d.month),
                            datasets: [{
                                label: 'Giá trị hủy',
                                data: data.map(d => d.value),
                                borderColor: '#e74a3b',
                                backgroundColor: 'rgba(231, 74, 59, 0.1)',
                                fill: true,
                                tension: 0.3
                            }],
                        },
                        options: {
                            maintainAspectRatio: false,
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    ticks: {
                                        callback: function (value, index, values) {
                                            return formatCurrency(value);
                                        }
                                    }
                                }
                            },
                            plugins: {
                                tooltip: {
                                    callbacks: {
                                        label: function (context) {
                                            return 'Hủy/Thất thoát: ' + formatCurrency(context.parsed.y);
                                        }
                                    }
                                }
                            }
                        }
                    });
                });
                // Gọi API và vẽ biểu đồ NVL dưới định mức
                $.get(lowStockUrl, function (data) {
                    if (window.lowStockChart instanceof Chart) { window.lowStockChart.destroy(); }
                    const ctx = document.getElementById('lowStockChart');
                    if (!ctx) return;

                    // Nếu không có dữ liệu, hiển thị thông báo
                    if (data.length === 0) {
                        ctx.parentElement.innerHTML = '<div class="text-center p-5 text-success"><i class="bi bi-check-circle-fill fs-2"></i><p>Tuyệt vời! Không có NVL nào dưới định mức.</p></div>';
                        return;
                    }

                    window.lowStockChart = new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: data.map(d => d.name),
                            datasets: [
                                {
                                    label: 'Tồn kho hiện tại',
                                    data: data.map(d => d.currentStock),
                                    backgroundColor: 'rgba(255, 193, 7, 0.7)', // Màu vàng cảnh báo
                                    borderColor: 'rgba(255, 193, 7, 1)',
                                    borderWidth: 1
                                },
                                {
                                    label: 'Tồn kho tối thiểu',
                                    data: data.map(d => d.minimumStock),
                                    backgroundColor: 'rgba(220, 53, 69, 0.7)', // Màu đỏ nguy hiểm
                                    borderColor: 'rgba(220, 53, 69, 1)',
                                    borderWidth: 1
                                }
                            ]
                        },
                        options: {
                            indexAxis: 'y', // Biến thành biểu đồ cột ngang
                            maintainAspectRatio: false,
                            scales: {
                                x: {
                                    beginAtZero: true,
                                    ticks: {
                                        callback: (value) => formatNumber(value)
                                    }
                                }
                            },
                            plugins: {
                                tooltip: {
                                    callbacks: {
                                        label: function (context) {
                                            let label = context.dataset.label || '';
                                            if (label) {
                                                label += ': ';
                                            }
                                            if (context.parsed.x !== null) {
                                                label += formatNumber(context.parsed.x);
                                            }
                                            return label;
                                        }
                                    }
                                }
                            }
                        }
                    });
                });

                // Gọi API và vẽ biểu đồ Top NVL bị hủy
                $.get(topWastedUrl, function (data) {
                    if (window.topWastedItemsChart instanceof Chart) { window.topWastedItemsChart.destroy(); }
                    const ctx = document.getElementById('topWastedItemsChart');
                    if (!ctx) return;

                    window.topWastedItemsChart = new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: data.map(d => d.name),
                            datasets: [{
                                label: 'Giá trị hủy',
                                data: data.map(d => d.valueWasted),
                                backgroundColor: '#fd7e14',
                                // Đưa dữ liệu số lượng vào để dùng trong tooltip
                                customData: data.map(d => d.quantityWasted)
                            }]
                        },
                        options: {
                            maintainAspectRatio: false,
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    ticks: { callback: (value) => formatCurrency(value) }
                                }
                            },
                            plugins: {
                                legend: { display: false },
                                tooltip: {
                                    callbacks: {
                                        label: function (context) {
                                            const value = formatCurrency(context.parsed.y);
                                            const quantity = context.chart.data.datasets[0].customData[context.dataIndex];
                                            return `Giá trị: ${value} (SL: ${formatNumber(quantity)})`;
                                        }
                                    }
                                }
                            }
                        }
                    });
                });
            }

            // Gọi hàm load dashboard khi trang được tải
            loadDashboardData();

            // Tùy chọn: Load lại dashboard khi người dùng click vào tab
            $('#dashboard-tab-btn').on('shown.bs.tab', function (e) {
                // Có thể thêm logic load lại ở đây nếu cần, nhưng hiện tại chỉ cần load 1 lần là đủ
            });
            // ================= END DASHBOARD LOGIC ===================
        });
    </script>
