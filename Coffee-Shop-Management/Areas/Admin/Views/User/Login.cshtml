@model Coffee_Shop_Management.Areas.Admin.ViewModels.LoginVM
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Đăng nhập";
}

<div class="login-container">
    <div class="left-side">
        <img src="~/pageLogin/image/flying-cup-of-coffee.png" alt="Find Coffee" />
        <h2>Coffee Shop</h2>
        <p>
            Nơi mà hương vị cà phê đậm đà hòa quyện cùng không gian ấm
            cúng, tạo nên một trải nghiệm độc đáo.
        </p>
    </div>
    <div class="right-side">
        <h2>Chào Mừng Trở Lại, Vui Lòng Đăng Nhập</h2>
        <form method ="post" asp-action="Login">
            <div class="form-group">
                <label for="username">Tên đăng nhập</label>
                <input asp-for="Username" type="text"
                       class="form-control"
                       id="username"
                       placeholder="Nhập tên người dùng" />
                <span asp-validation-for="Username" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label for="password">Mật khẩu</label>
                <div class="password-wrapper">
                    <input asp-for="Password" type="password"
                           class="form-control"
                           id="password"
                           placeholder="Nhập mật khẩu" />
                    <span class="password-toggle" id="password-toggle">
                        <i class="fas fa-eye"></i>
                    </span>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>

            </div>
            <div class="form-group d-flex justify-content-between align-items-center">
                <div class="form-check">
                    <input asp-for="RememberMe" type="checkbox"
                           class="form-check-input"
                           id="rememberMe" />
                    <label class="form-check-label" for="rememberMe">Lưu đăng nhập</label>
                </div>
                <div class="forgot-password">
                    <a href="#">Quên mật khẩu?</a>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">
                Đăng Nhập
            </button>
        </form>
    </div>
</div>
