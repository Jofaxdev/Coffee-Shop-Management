                });
            };

            window.restoreCategory = function (id, name) {
                const safeName = name ? $('<div>').text(name).html() : 'loại này';
                // Lấy thông tin trang hiện tại của bảng Deleted TRƯỚC KHI khôi phục
                const deletedTable = deletedCategoryTableModule.getInstance();
                let currentPage = 0;
                let recordsOnCurrentPage = 0;
                if (deletedTable) { // Kiểm tra instance tồn tại
                    currentPage = deletedTable.page();
                    recordsOnCurrentPage = deletedTable.rows({ page: 'current' }).count();
                }
                const shouldGoToPrevPage = (currentPage > 0 && recordsOnCurrentPage === 1);

                Swal.fire({
                    title: 'Xác nhận khôi phục', html: `Bạn chắc chắn muốn khôi phục loại <strong>${safeName}</strong>?`, icon: 'question',
                    showCancelButton: true, confirmButtonText: '<i class="fas fa-undo-alt me-1"></i>Khôi phục', cancelButtonText: '<i class="fas fa-times me-1"></i>Hủy',
                    reverseButtons: true, customClass: { popup: 'custom-swal-popup', confirmButton: 'custom-restore-btn btn ms-2', cancelButton: 'custom-cancel-btn btn me-2' },
                    buttonsStyling: false, showLoaderOnConfirm: true,
                    preConfirm: () => {
                        return $.ajax({
                            url: `/Admin/Category/Restore/${id}`, type: 'POST', data: { __RequestVerificationToken: csrfToken }, dataType: 'json'
                        }).catch(error => { Swal.showValidationMessage(`Yêu cầu thất bại: ${error.responseJSON?.message || error.statusText || 'Lỗi không xác định'}`); });
                    },
                    allowOutsideClick: () => !Swal.isLoading()
                }).then((result) => {
                    if (result.isConfirmed && result.value.success) {
                        showSuccessToast(result.value.message || 'Đã khôi phục thành công.');

                        // Reload bảng Deleted với callback để xử lý chuyển trang nếu cần
                        if (deletedTable) {
                            deletedTable.ajax.reload(function (json) {
                                // Callback này chạy SAU KHI dữ liệu được tải lại
                                const newTotalRecords = deletedTable.page.info().recordsDisplay; // Tổng số record sau khi khôi phục
                                if (shouldGoToPrevPage && newTotalRecords > 0) {
                                    if (deletedTable.page() === currentPage) {
                                        deletedTable.page(currentPage - 1).draw(false); // Chuyển về trang trước đó
                                        console.log('Adjusted Deleted table to previous page after restore.');
                                    }
                                }
                                // Reload bảng Active sau khi bảng Deleted xử lý xong
                                activeCategoryTableModule.reloadAndResetPaging(); // Reload Active table và về trang 1
                                console.log('Reloaded Active table after restore.');
                            }, false); // false: không reset paging trong quá trình reload
                        } else {
                            // Nếu không lấy được instance, chỉ reload bình thường
                            activeCategoryTableModule.reloadAndResetPaging();
                        }
                        console.log('Reloading Deleted table after restore.');

                    } else if (result.isConfirmed && !result.value.success) {
                        showErrorAlert('Khôi phục thất bại', result.value.message || 'Không thể khôi phục loại sản phẩm.');
                    }
                });
            };

            // =========================================================================
            // XỬ LÝ CHUYỂN TAB
            // =========================================================================
            function setupTabEvents() {
                let deletedTabLoaded = false;
                const deletedTabTrigger = document.getElementById('nav-deleted-tab');
                const activeTabTrigger = document.getElementById('nav-active-tab');

                const loadTooltips = (tableSelector) => {
                    setTimeout(function () {
                        try {
                            const tooltipTriggerList = [].slice.call(document.querySelectorAll(`${tableSelector} [title]`));
                            tooltipTriggerList.forEach(function (tooltipTriggerEl) {
                                let tooltipInstance = bootstrap.Tooltip.getInstance(tooltipTriggerEl);
                                if (tooltipInstance) {
                                    tooltipInstance.dispose(); // Hủy tooltip cũ để tránh lỗi
                                }
                                new bootstrap.Tooltip(tooltipTriggerEl); // Tạo mới
                            });
                        } catch (e) { console.error("Error initializing tooltips: ", e); }
                    }, 250); // Tăng nhẹ delay nếu cần
                };

                if (deletedTabTrigger) {
                    deletedTabTrigger.addEventListener('shown.bs.tab', function (event) {
                        if (!deletedTabLoaded) {
                            deletedCategoryTableModule.reload(); // Chỉ reload khi load lần đầu
                            deletedTabLoaded = true;
                        } else {
                            // Tùy chọn: Reload lại bảng nếu cần dữ liệu mới nhất mỗi lần click
                            // deletedCategoryTableModule.reload();
                        }
                        loadTooltips('#deletedCategoryTable'); // Load tooltip cho bảng đã xóa
                    });
                }

                if (activeTabTrigger) {
                    activeTabTrigger.addEventListener('shown.bs.tab', function (event) {
                        // Bảng active thường đã load ban đầu, chỉ cần đảm bảo tooltip
                        loadTooltips('#activeCategoryTable');
                    });
                }
            }

            // =========================================================================
            // KHỞI TẠO KHI TRANG SẴN SÀNG
            // =========================================================================
            $(document).ready(function () {
                csrfToken = $('input[name="__RequestVerificationToken"]').val();
                if (!csrfToken) { console.error("CSRF token not found!"); showErrorAlert("Lỗi cấu hình", "Không tìm thấy mã xác thực bảo mật."); }

                activeCategoryTableModule.init();   // Khởi tạo bảng active (sẽ load data ngay)
                deletedCategoryTableModule.init();  // Khởi tạo bảng deleted (chưa load data)
                categoryModalModule.setup();        // Khởi tạo modal
                setupTabEvents();                   // Khởi tạo sự kiện chuyển tab

                // Đảm bảo tooltip cho bảng active được load ban đầu
                setTimeout(() => {
                    const tooltipTriggerList = [].slice.call(document.querySelectorAll('#activeCategoryTable [title]'));
                    tooltipTriggerList.map(function (tooltipTriggerEl) {
                        return new bootstrap.Tooltip(tooltipTriggerEl)
                    });
                }, 300); // Delay nhỏ để đảm bảo table đã vẽ

                console.log("Trang quản lý loại SP (2 Tabs) đã sẵn sàng.");
            });

        })(jQuery);
    </script>
